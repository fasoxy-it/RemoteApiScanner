@model RemoteApiScanner.Models.EsecuzioniKiteRunner

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center vertical-center">
    <div class="row mb-3">
        <div class="col-10 offset-1">
            <img src="/Img/Logo-RAS.png" class="w-100" />
        </div>
    </div>
    <form asp-action="Create">
        <div class="col-8 offset-2">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input id="search-input" type="text" class="form-control text-center" placeholder="www.example.it">
                <span class="input-group-text filter-icon" onmouseover="changeIcon(this, 'bi-filter-square-fill')" onmouseout="changeIcon(this, 'bi-filter')" onclick="showFilters()">
                    <i class="bi bi-filter"></i>
                </span>
                <span class="input-group-text send-icon" onmouseover="changeIcon(this, 'bi-send-fill')" onmouseout="changeIcon(this, 'bi-send')" onclick="search()">
                    <i class="bi bi-send"></i>
                </span>
            </div>
        </div>

        <!--
        <div class="row">
            <div class="col-8 offset-2">
                <div class="input-group mb-3 form-group">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-search"></i></span>
                    <input asp-for="link" type="text" class="form-control text-center" placeholder="www.example.it" aria-label="Link" aria-describedby="basic-addon1">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon1" onclick="showFilters()"><i class="bi bi-filter"></i></button>
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="bi bi-send"></i></button>
                </div>
            </div>
        </div>
        -->
        <div class="row d-none" id="filterContainer">
            <div class="col-2 offset-2">
                <div class="card">
                    <div class="card-header">Routes</div>
                    <div class="card-body form-control">
                        <div class="form-check">
                            <input class="form-check-input form-control" type="radio" name="routeRadio" id="smallRadio" value="small">
                            <label class="form-check-label" for="smallRadio">
                                Small
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input form-control" type="radio" name="routeRadio" id="largeRadio" value="large">
                            <label class="form-check-label" for="largeRadio">
                                Large
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="routes" class="form-check-input form-control" type="radio" name="routeRadio" id="demoRadio" value="demo">
                            <label class="form-check-label" for="demoRadio">
                                Demo
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card form-control">
                    <div class="card-header">Client Errors</div>
                    <div class="card-body">
                        <div class="form-check">
                            <input asp-for="statusCode" class="form-check-input form-control" type="checkbox" value="400" id="400Check">
                            <label asp-for="statusCode" class="form-check-label" for="400Check">
                                400: Bad request
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="statusCode" class="form-check-input form-control" type="checkbox" value="401" id="401Check">
                            <label asp-for="statusCode" class="form-check-label" for="401Check">
                                401: Unauthorized
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="statusCode" class="form-check-input form-control" type="checkbox" value="403" id="403Check">
                            <label asp-for="statusCode" class="form-check-label" for="403Check">
                                403: Forbidden
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="statusCode" class="form-check-input form-control" type="checkbox" value="404" id="404Check">
                            <label asp-for="statusCode" class="form-check-label" for="404Check">
                                404: Not found
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="statusCode" class="form-check-input form-control" type="checkbox" value="405" id="405Check">
                            <label asp-for="statusCode" class="form-check-label" for="405Check">
                                405: Method not allowed
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="statusCode" class="form-check-input form-control" type="checkbox" value="426" id="426Check">
                            <label asp-for="statusCode" class="form-check-label" for="426Check">
                                426: Upgrade require
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card form-control">
                    <div class="card-header">Server Errors</div>
                    <div class="card-body">
                        <div class="form-check">
                            <input asp-for="statusCode" class="form-check-input form-control" type="checkbox" value="501" id="501Check">
                            <label asp-for="statusCode" class="form-check-label" for="501Check">
                                501: Not implemented
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="statusCode" class="form-check-input form-control" type="checkbox" value="502" id="502Check">
                            <label asp-for="statusCode" class="form-check-label" for="502Check">
                                502: Bad gateway
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function search() {
            var input = document.getElementById("search-input").value;
            console.log("Hai cercato: " + input);
        }

        function showFilters() {
            var filterContainer = document.getElementById("filterContainer");

            if (filterContainer.classList.contains("d-none")) {
                filterContainer.classList.remove("d-none");
            } else {
                filterContainer.classList.add("d-none");
            }
        }

        function changeIcon(element, newIconClass) {
            var icon = element.querySelector('i');
            icon.className = 'bi ' + newIconClass;
        }
    </script>
}
