@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex">
    <div class="align-self-center col-12">
        <div class="col-4 offset-4 card shadow">
            <div class="p-4 text-center">
                <img src="/Img/Logo-RAS.png" class="w-100" />
                <h3 class="my-3">Register</h3>
                <div class="text-center">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control text-center rounded-0 rounded-top" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control text-center rounded-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control text-center rounded-0 rounded-bottom" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        </div>
                        <div class="mb-3">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-1">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-success">Register</button>
                        </div>
                        <div>
                            <a class="text-body-tertiary text-decoration-none w-100 small" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Do you have an account? Click here to login!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
