@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container d-flex">
    <div class="align-self-center col-12">
        <div class="col-4 offset-4 card shadow">
            <div class="p-4">
                <img src="/Img/Logo-RAS.png" class="w-100"/>
                <h3 class="my-3">Login</h3>
                <div class="text-center">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control text-center rounded-0 rounded-top" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label text-center">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control text-center rounded-0 rounded-bottom" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                        </div>
                        <div class="mb-3">
                            <span asp-validation-for="Input.Email" class="text-danger m-0"></span>
                            <span asp-validation-for="Input.Password" class="text-danger m-0"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label m-0">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Remember me!
                            </label>
                        </div>
                        <div class="mb-1">
                            <button id="login-submit" type="submit" class="btn btn-success w-100">Login</button>
                        </div>
                        <div>
                            <a class="text-body-tertiary text-decoration-none w-100 small" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">You don't have an account? Click here to register!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
